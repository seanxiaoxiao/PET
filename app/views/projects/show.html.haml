%p#notice= notice

%ul#project-tabs.nav.nav-tabs
  %li.active
    %a{:href => "#project", :data_toggle => "tab"} Project
.border-project
  %dl.dl-horizontal
    %dt Name:
    %dd= @project.name
    %dt Lifecycle:
    %dd= @project.lifecycle.name
    %dt Description:
    %dd= @project.description

  = link_to 'Edit', edit_project_path(@project)
  \|
  = link_to 'Back', projects_path
