= form_for @lifecycle do |f|
  - if @lifecycle.errors.any?
    #error_explanation
      %h2= "#{pluralize(@lifecycle.errors.count, "error")} prohibited this lifecycle from being saved:"
      %ul
        - @lifecycle.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
